var num1 = 5;
var num2 = 8;
if (num1 <= num2) {
    console.log('numero1 no es mayor que numero2');
}
if (num2 > 0) {
    console.log('numero2 es positivo');
}
if (num1 < 0 || num1 != 0) {
    console.log('numero1 es negativo o distinto de 0');
}
if (num1 + 1 < num2) {
    console.log('incrementar en 1 el valor del numero1  no lo hace mayor o igual que numero2');
}